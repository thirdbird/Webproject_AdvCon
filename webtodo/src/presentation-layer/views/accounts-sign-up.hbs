<div class="content">
	<h2>Sign up</h2>
</div>
{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{else}}
	
	{{#if accounts.length}}
		<ul>
			{{#each accounts}}
				<li><a href="/accounts/{{username}}">{{username}}</a></li>
			{{/each}}
		</ul>
	{{else}}
		<p></p>
	{{/if}}
	
{{/if}}
<form action="/sign-up" id="createAccountForm" method="POST">
		
	<div>Username: <input type="text" name="username" id="username"></div>
	
	<div>Password: <input type="password" name="password1" id="password1"></div>
	
	<div>Password (repeat): <input type="password" name="password2" id="password2"></div>
	
	<input type="submit" value="Create account">
	
</form>
