
<div class="container">

    <form method="POST">
        <label for="new-task">Add Blog Post</label>
        <input name="title" type="todoInput" class="todoInput">
        <input name="post" type="todoInput" class="todoInput">
        <input type="submit" value="Add" class="todoButton">
    </form>
    <div class="content">
        {{#if errors.length}}
        <ul>
            {{#each errors}}
            <p id="ErrorMessage">{{this}}</p>
            {{/each}}
        </ul>
        {{/if}}
    </div>


    <h3 class="has-text-weight-bold">All Blog Posts</h3>
    {{#if blogPosts.length}}
    <ul>
        {{#each blogPosts}}
        <li class="todosList">{{blogPosts.title}}</li>  <!-- <button class="delete">Delete</button>  -->
        {{/each}}
    </ul>
    {{/if}}
</div>
